<div class="tweet">
  <div class="media tweet-header">
    <div class="media-left">
      <%= image_tag(tweet.user.avatar.url(:thumb),class: 'img-rounded') %>
    </div>
    <div class="media-body">
      <%= link_to tweet.user.username, userpage_path(tweet.user.username) %>
    </div>
  </div>
  <div class="tweet-body">
    <p>
      <%= tweet.content %>
    </p>
  </div>
  <div class="tweet-footer">
    <div class="row tweet-actions">
      <span class="like">
        <% if user_signed_in? %>
          <% if current_user.likes?(tweet) %>
            <%= link_to fa_icon('heart lg'), unlike_tweet_path(tweet.id), class: 'unlike-btn' %>
          <% else %>
            <%= link_to fa_icon('heart-o lg'), like_tweet_path(tweet.id) %>
          <% end %>
        <% else %>
          <%= link_to fa_icon('heart-o lg'), like_tweet_path(tweet.id) %>
        <% end %>
      </span>
      <span class="reply">
        <%= link_to fa_icon('comment-o lg') %>
      </span>
      <span class="counter"></span>
    </div>

    <div class="reply-form">
      
    </div>
  </div>
</div>
