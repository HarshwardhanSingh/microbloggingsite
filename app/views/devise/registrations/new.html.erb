<div class="signup-form">
	<h3>Sign up</h3>
	<hr>
	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :username, label: false, input_html:{placeholder: "Username"}, required: true, autofocus: true %>
	    <%= f.input :email, label: false, input_html:{placeholder: "Email"}, required: true %>
	    <%= f.input :password, label: false, input_html:{placeholder: "Choose Password"}, required: true %>
	    <%= f.input :password_confirmation, label: false, input_html:{placeholder: "Confirm Password"}, required: true %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
	  </div>
	<% end %>
</div>
