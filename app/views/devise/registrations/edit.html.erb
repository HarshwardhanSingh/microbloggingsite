<div class="edit-registration-form">
  <h3>Edit Account</h3>
  <hr>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :username,label: false, input_html:{placeholder: "Username"}, required: true, autofocus: true %>
      <%= f.input :email,label: false, input_html:{placeholder: "Registered Email"} %>
      <%= f.input :avatar %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,label: false, input_html:{placeholder: "New Password {Leave it blank if you don't want to change it}"}, autocomplete: "off", required: false %>
      <%= f.input :password_confirmation,label: false, input_html:{placeholder: "Confirm New Password"}, required: false %>
      <%= f.input :current_password,label: false, input_html:{placeholder: "Current Password {We need your current password to confirm your changes}"},required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: 'btn btn-warning' %>
    </div>
  <% end %>

</div>
