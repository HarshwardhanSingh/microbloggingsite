<div class="signin-form">
	<h3>Sign in</h3>
	<hr>
	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="form-inputs">
	    <%= f.input :login, label: false, input_html:{placeholder: "Username or Email"}, required: false, autofocus: true %>
	    <%= f.input :password, label: false, input_html:{placeholder: "Password"}, required: false %>
	    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Sign In", class: 'btn btn-primary' %>
	  </div>
	<% end %>

</div>